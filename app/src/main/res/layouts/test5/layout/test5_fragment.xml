<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="com.android.kotlin_test1.test5.fragment02.Test5Fragment_02_VM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/test5_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/test5_fragment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/test5_fragment_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv2"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/test5_fragment_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入:"
            android:text="@={vm.searchText}"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/test5_fragment_edittext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入:"
            android:text=""
            android:textSize="30sp" />

    </LinearLayout>
</layout>